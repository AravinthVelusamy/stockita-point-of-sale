<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/burgundy"
    android:orientation="vertical"
    android:padding="@dimen/dialog_lookup_item_master_16"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_lookup_item_master_16"
        android:layout_marginBottom="@dimen/dialog_lookup_item_master_16"
        android:layout_marginStart="@dimen/dialog_lookup_item_master_32"
        android:layout_marginEnd="@dimen/dialog_lookup_item_master_32"
        android:text="@string/dialog_lookup_item_master_list"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/white" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_master_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

</LinearLayout>